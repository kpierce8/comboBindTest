<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="clr-namespace:ComboBindTest.Model"
   
        
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" 
    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ComboBindTest.MainWindow"
    
        
        Title="MainWindow" Height="208" Width="484">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!--<model:CurrentValueConverter x:Key="CurrentValueConverter"
                  ButtonControlTemplate1="{StaticResource ButtonControlTemplate1}"
                  ButtonControlTemplate2="{StaticResource ButtonControlTemplate2}"    />-->
            <!--<model:MultiValueConverter x:Key="CLCConverter"/>-->
            <model:LandClassDataTemplateSelector
        DataTemplateTree="{StaticResource DataTemplateTree}"
        DataTemplateGrass="{StaticResource DataTemplateGrass}"
        DataTemplateUrban="{StaticResource DataTemplateUrban}"
                 x:Key="lcTemplateSelector" />
            <DataTemplate x:Key="DataTemplate1">
            	<Grid Background="#FFCF1C1C" Margin="0,-3,-12,-4"/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid DataContext="{Binding Main, Mode=OneWay, Source={StaticResource Locator}}">
        <Button Content="Option 1" HorizontalAlignment="Left"  Margin="60,23,0,0" VerticalAlignment="Top" 
		Width="107" Height="46" Command="{Binding MyCommand, Mode=OneWay}" 
		CommandParameter="1"  Style="{DynamicResource ButtonStyle3}"/>

        <Button Content="Option 2" HorizontalAlignment="Left" Margin="60,74,0,0" VerticalAlignment="Top" 
                Width="91" Height="39" 
                Command="{Binding MyCommand, Mode=OneWay}" CommandParameter="2" 
                Tag="{Binding Path=theList/landCLass}" Template="{DynamicResource ButtonControlTemplate1}"
               />


        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Height="38" Width="54" Text="{Binding theList/landCLass}" TextAlignment="Center" />
        <Button Content="Option 3" HorizontalAlignment="Left" Margin="60,118,0,0" VerticalAlignment="Top" Width="92" Height="39" Template="{DynamicResource ButtonControlTemplate1}" Command="{Binding MyCommand, Mode=OneWay}" CommandParameter="3"/>


        <ListBox Name="mainLB" HorizontalAlignment="Left" 
                 ItemsSource="{Binding changeView}"
                 
                 IsSynchronizedWithCurrentItem="True"
                 Height="100" Margin="288,36,0,0" VerticalAlignment="Top" Width="100" ItemTemplateSelector="{StaticResource lcTemplateSelector}"/>


    </Grid>
</Window>
